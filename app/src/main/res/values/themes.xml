<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@null</item>
        <item name="colorPrimaryDark">@null</item>
        <item name="colorAccent">@null</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/text_color</item>
    </style>

    <style name="text_view">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>

    </style>

    <style name="text_view.item">
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_view_item.branch_title" parent="text_view.item">
        <item name="fontFamily">@font/ample_soft_pro_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="text_view_item.master_title" parent="text_view.item">
        <item name="fontFamily">@font/ample_soft_pro_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
     </style>

    <style name="text_view.home_text" parent="text_view">
     <item name="android:textSize">@dimen/_14ssp</item>
     <item name="fontFamily">@font/ample_soft_pro_bold</item>
    </style>

    <style name="progress_dialog" parent="Theme.AppCompat.Dialog" >
        <item name="colorAccent">@color/start_color_gradient</item>
         <item name="fontFamily">@font/ample_soft_pro_bold</item>
        <item name = "android:textColor">@color/text_color</item>

    </style>
</resources>